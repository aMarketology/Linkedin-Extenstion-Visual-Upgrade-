{
    "manifest_version": 3,
    "name": "Unnanu LinkedIn Extension",
    "description": "LinkedIn profile extractor with sidebar interface and smart data collection",
    "version": "2.0",
    "permissions": [
        "activeTab",
        "storage",
        "tabs"
    ],
    "host_permissions": [
        "*://*.linkedin.com/*",
        "https://plugin.unnanu.com/*"
    ],
    "icons": {
        "16": "images/icon-2.png",
        "32": "images/icon-2.png",
        "48": "images/icon-2.png",
        "128": "images/icon-2.png"
    },
    "action": {
        "default_popup": "popup.html",
        "default_title": "Unnanu - Your LinkedIn Assistant",
        "default_icon": {
            "16": "images/icon-2.png",
            "32": "images/icon-2.png",
            "48": "images/icon-2.png",
            "128": "images/icon-2.png"
        }
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [{
        "matches": ["*://*.linkedin.com/*"],
        "js": ["datasend.js", "content.js"],
        "run_at": "document_idle"
    }]
}